<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.subskip" name="SubSkip" version="0.0.5" provider-name="drinfernoo">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
		<import addon="script.module.requests"/>
        <import addon="script.module.pymysql"/>
		<import addon="script.service.a4ksubtitles" optional="true"/>
    </requires>
    
    <extension point="xbmc.python.script" library="main.py"/>
    <extension point="xbmc.python.pluginsource" library="test.py">
        <provides>executable</provides>
    </extension>

    <extension point="xbmc.service" library="service.py" start="startup"/>

    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Skip intros for TV Shows.</summary>
        <description lang="en_GB"></description>
        <language></language>
        <platform>all</platform>
        <license>Apache-2.0</license>
        <forum></forum>
        <website>https://github.com/drinfernoo</website>
        <email>drinfernoo@yahoo.com</email>
        <source></source>
        <news></news>
        <disclaimer></disclaimer>
        <assets>
            <icon>icon.png</icon>
        </assets>
    </extension>
</addon>
